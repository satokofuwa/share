<table>
  <thead>
  <h3> お気に入り一覧</h3>

  <button type="button" class="btn btn-primary"> <%= link_to 'New Post', new_post_path %></button>
  </thead>

  <tbody>
            <% @posts.each do |p| %>
            <tr> 
            <% if  current_user.id == p.user_id%> 
              <td><%= p.title %></td>
              <td><%= p.user.name %></td>
              <td><%= p.name %></td></td>
              <td><%= p.image %></td></td>
            <%end%>
              </tr>
            <%end%>
  </tbody>
</table>