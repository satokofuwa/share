<p id="notice"><%= notice %></p>
<h1>ALL Posts</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p.image %></td>
        <%= link_to "show_me", post_path(p.id) %> 
        <td><%= p.title %> </td>

         <% if  current_user.id == p.id%> 
        <td><%= link_to 'Edit', edit_post_path(p.id)%></td>
        <td><%= button_to 'Destroy',post_path(p.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
 </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path %>