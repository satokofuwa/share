<h1>New Post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%=@post.errors.count %>件のエラーがあります</h2>
    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @post, local: true) do |f| %>  
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit "登録する" %>
<% end %>