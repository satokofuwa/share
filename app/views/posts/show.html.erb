
<p> image: <%= @post.image %></p>
<p>Title: <%= @post.title %></p>
<p> 画像: <%=image_tag (@post.image.url), size: '320x240' if @post.image && @post.image.url%></p>
<% unless @post.user_id == @currrent_user %>
  <% if @like.present? %>
    <% link_to 'お気に入り解除', likes_path(id: @like.id), method: :delete,class: 'btn btn-danger'%>
  <% else %>
    <% link_to 'お気に入りにする',likes_path(id: @like.id),method: :post,class: 'btn btn-primary'%>
  <% end %>
<% end %>
