  <%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <strong><%= f.label :image %></strong>
      <br>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= image_tag (@user.image.url), size: '320x240' if @user.image && @user.image.url%>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      <br>
      <br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to "ユーザー画面にもどる", users_path %>
